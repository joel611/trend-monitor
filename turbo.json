{
	"$schema": "https://turbo.build/schema.json",
	"ui": "stream",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"typecheck": {
			"dependsOn": ["^build"]
		},
		"lint": {
			"cache": true
		},
		"format": {
			"cache": true
		},
		"format:fix": {
			"cache": false
		},
		"deploy": {
			"dependsOn": ["build", "typecheck", "lint"]
		}
	}
}
